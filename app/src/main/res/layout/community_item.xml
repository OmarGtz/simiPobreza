<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/comunity_icon_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_round_home"/>
        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/comunity_item_tv_name"
            android:layout_width="wrap_content"
            android:text="San Antonio Abad"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/comunity_icon_home"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
            android:id="@+id/community_tv_donaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginBottom="14dp"
            app:layout_constraintStart_toEndOf="@id/comunity_icon_home"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#797777"
            android:text="Entregadas: 200"/>
        <TextView
            android:layout_marginStart="12dp"
            android:textColor="#797777"
            app:layout_constraintStart_toEndOf="@id/community_tv_donaciones"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:layout_marginBottom="14dp"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            android:id="@+id/community_tv_entregadas"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Restantes:250"/>

         <TextView
            android:textColor="@color/greenColor"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:textSize="12sp"
             android:layout_marginEnd="12dp"
             app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:visibility="gone"
             android:drawableStart="@drawable/ic_comprobado"
            android:text="CERRADA"/>

         <TextView
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            app:layout_constraintStart_toEndOf="@id/community_tv_entregadas"
            android:id="@+id/community_tv_donaciones_restantes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableStart="@drawable/ic_donation_restantes"
            android:textColor="@android:color/darker_gray"
            android:text="1200"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"/>


</android.support.constraint.ConstraintLayout>