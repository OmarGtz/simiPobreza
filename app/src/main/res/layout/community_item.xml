<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="24dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="24dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/comunity_item_tv_name"
            android:layout_width="wrap_content"
            android:text="San Antonio Abad"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
            android:id="@+id/community_tv_donaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_beneficiario_normal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            android:text="1200"/>



        <TextView
            android:layout_marginStart="8dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/community_tv_donaciones"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_donation_white"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            android:id="@+id/community_tv_entregadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="250"/>

    <TextView
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
        app:layout_constraintStart_toEndOf="@id/community_tv_entregadas"
        android:id="@+id/community_tv_donaciones_restantes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_donation_restantes"

        android:textColor="@android:color/darker_gray"
        android:text="1200"/>


    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:text="Ver donaciones"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textColor="@color/colorPrimaryDark"
        />


</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>


