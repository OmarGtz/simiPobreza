<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingEnd="12dp"
    app:cardBackgroundColor="@android:color/darker_gray"

    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/comunity_item_tv_name"
            android:layout_width="wrap_content"
            android:text="San antonio abad"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
            android:id="@+id/community_tv_donaciones"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Donaciones: 1050"/>

        <TextView
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/community_tv_donaciones"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/community_tv_entregadas"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Entregadas: 500"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
