<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="80dp"
    android:layout_width="match_parent"
    android:paddingEnd="12dp"
    android:elevation="8dp"
    android:background="?selectableItemBackground"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/comunity_item_tv_name"
            android:layout_width="wrap_content"
            android:text="SAN ANTONIO ABAD"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
            android:id="@+id/community_tv_donaciones"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:text="Beneficiarios: 1050"/>

        <TextView
            android:layout_marginStart="24dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/community_tv_donaciones"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            android:id="@+id/community_tv_entregadas"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Entregadas: 500"/>

        <ImageButton
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            />

    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>
