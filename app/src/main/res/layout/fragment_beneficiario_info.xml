<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".beneficiarioInfo">


    <android.support.design.widget.TextInputLayout
        android:paddingTop="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:gravity="bottom"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/login_input_layout_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="#9e000000"
        app:hintTextAppearance="@style/login_hintTextAppearance"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        app:hintEnabled="true"
        app:layout_constraintEnd_toStartOf="@+id/login_input_layout_lastname"
        app:hintAnimationEnabled="true"
        android:background="@drawable/input_background"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="13sp"
            android:enabled="false"
            android:focusable="false"
            android:text="Omar"
            android:theme="@style/login_editControl"
            android:hint="NOMBRE" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:paddingTop="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:gravity="bottom"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/login_input_layout_name"
        android:id="@+id/login_input_layout_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="#9e000000"
        app:hintTextAppearance="@style/login_hintTextAppearance"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"
        app:hintEnabled="true"
        android:focusable="false"
        app:hintAnimationEnabled="true"
        android:background="@drawable/input_background"
        app:layout_constraintEnd_toEndOf="parent" >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="13sp"
            android:enabled="false"
            android:focusable="false"
            android:text="Gutierrez Santiago"
            android:theme="@style/login_editControl"
            android:hint="APELLIDO PATERNO" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>