<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/beneficiario_icon"
        android:src="@drawable/ic_round_assignment_ind_24px"
        android:layout_width="48dp"
        android:layout_marginBottom="8dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/beneficiario_icon"
            android:id="@+id/beneficiario_item_tv_name"
            android:layout_width="wrap_content"
            android:text="Omar Gutierrez Santiago"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content" />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="12dp"
        android:background="#191"
        android:layout_height="0dp"/>

        <TextView
            app:layout_constraintStart_toEndOf="@id/beneficiario_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/beneficiario_item_tv_name"
            app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
            android:id="@+id/beneficiario_tv_folio"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/black"
            tools:text="6300001391331"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

