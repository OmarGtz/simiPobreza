<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/beneficiario_icon"
        android:src="@drawable/ic_account_circle_24px"
        android:layout_width="48dp"
        android:layout_marginBottom="8dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/beneficiario_icon"
            android:id="@+id/beneficiario_item_tv_name"
            android:layout_width="wrap_content"
            android:text="Omar Gutierrez Santiago"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content" />


        <TextView
            app:layout_constraintStart_toEndOf="@id/beneficiario_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/beneficiario_item_tv_name"
            app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
            android:id="@+id/beneficiario_tv_folio"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_round_assignment_ind_24px"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/darker_gray"
            tools:text="6300001391331"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"/>


    <View
        app:layout_constraintTop_toBottomOf="@+id/beneficiario_tv_folio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/beneficiario_line"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


</android.support.constraint.ConstraintLayout>

