<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="24dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingEnd="24dp">

        <TextView
            android:id="@+id/beneficiario_item_tv_name"
            android:layout_width="wrap_content"
            android:text="Omar Gutierrez Santiago"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beneficiario_item_tv_name"
            app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
            android:id="@+id/beneficiario_tv_folio"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:text="6300001391331"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/beneficiario_tv_folio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    </android.support.constraint.ConstraintLayout>



