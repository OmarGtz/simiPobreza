<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/comunity_icon_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_round_home"/>
    <View
        android:id="@+id/item_line"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="12dp"
        android:background="@color/greenColor"
        android:layout_height="0dp"/>
    <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/comunity_item_tv_name"
            android:layout_width="wrap_content"
            android:text="San Antonio Abad"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_line"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            android:id="@+id/community_tv_donaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textStyle="italic"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:visibility="visible"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:background="@drawable/text_entregadas_background"
            app:layout_constraintStart_toEndOf="@id/item_line"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:text="200/300 Entregas"/>
        <TextView
            android:visibility="gone"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/community_tv_donaciones"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:layout_marginBottom="14dp"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            android:id="@+id/community_tv_entregadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:text="250 sobrantes"/>
         <TextView
             android:textColor="@color/greenColor"
             app:layout_constraintTop_toBottomOf="@+id/community_tv_entregadas"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginBottom="12dp"
             android:layout_marginStart="24dp"
             android:layout_marginTop="12dp"
             android:textSize="12sp"
             android:layout_marginEnd="12dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:visibility="invisible"
             android:drawableStart="@drawable/ic_comprobado"
             android:text="Terminada"/>
    <TextView
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/comunity_item_tv_name"
            app:layout_constraintStart_toEndOf="@id/community_tv_entregadas"
            android:id="@+id/community_tv_donaciones_restantes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableStart="@drawable/ic_donation_restantes"
            android:textColor="@android:color/darker_gray"
            android:text="1200"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver detalle"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/community_tv_donaciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"/>
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"/>
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>