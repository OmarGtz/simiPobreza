<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="24dp">

    <ImageView
        android:id="@+id/comunity_ic_donation"
        android:layout_width="40dp"
        android:layout_marginTop="6dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_donation_48dp"/>

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/donation_item_tv_name"
        android:layout_width="wrap_content"
        android:text="San Antonio Abad"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/comunity_ic_donation"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/donation_item_tv_name"
        app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
        android:id="@+id/community_tv_donaciones"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textSize="13sp"
        android:drawableStart="@drawable/ic_round_assignment_ind_24px"
        app:layout_constraintStart_toEndOf="@id/comunity_ic_donation"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"
        android:text="6300001391331"/>

    <TextView
        android:layout_marginStart="8dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/community_tv_donaciones"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        android:drawableStart="@drawable/ic_fecha_entrega"
        app:layout_constraintTop_toBottomOf="@+id/donation_item_tv_name"
        android:id="@+id/community_tv_entregadas"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text=" 25 Marzo del 2018"/>

</android.support.constraint.ConstraintLayout>



