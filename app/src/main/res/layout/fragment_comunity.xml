<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CommunityFragment">

    <TextView
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/comunity_tv_donation"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/comunity_tv_delegation"
        android:text="BAJA CALIFORNIA NORTE"/>

    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/comunity_tv_donation"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comunity_status"
        android:text="CERRADA"/>


    <TextView
        android:id="@+id/comunity_tv_donation"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:text="DONACIONES: 1056"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/comunity_line"
        app:layout_constraintTop_toBottomOf="@id/comunity_tv_delegation"/>

    <TextView
        android:id="@+id/comunity_tv_entregadas"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="ENTREGADAS: 956"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/comunity_line"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/comunity_tv_delegation"/>


    <HorizontalScrollView
        android:id="@+id/comunity_content_chip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comunity_line"
        app:layout_constraintBottom_toTopOf="@+id/comunity_recycler">

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:background="@drawable/chip_periods_background_color"
                android:text="ENE-FEB"
                android:textSize="12sp"
                android:textColor="@drawable/chip_color_tex"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:background="@drawable/chip_periods_background_color"
                android:text="MAR-ABR"
                android:textColor="@drawable/chip_color_tex"
                android:paddingTop="8dp"
                android:textSize="13sp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:background="@drawable/chip_periods_background_color"
                android:text="MAY-JUN"
                android:textColor="@drawable/chip_color_tex"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="13sp"
                android:layout_marginEnd="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:background="@drawable/chip_periods_background_color"
                android:text="JUL-AGO"
                android:textSize="13sp"
                android:textColor="@drawable/chip_color_tex"

                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:background="@drawable/chip_periods_background_color"
                android:text="SEP-OCT"
                android:textColor="@drawable/chip_color_tex"
                android:paddingTop="8dp"
                android:textSize="13sp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:background="@drawable/chip_periods_background_color"
                android:text="NOV-DIC"
                android:textSize="13sp"
                android:textColor="@drawable/chip_color_tex"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </HorizontalScrollView>

    <View
        android:id="@+id/comunity_line"
        app:layout_constraintTop_toBottomOf="@+id/comunity_tv_donation"
        app:layout_constraintBottom_toTopOf="@+id/comunity_content_chip"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_marginEnd="12dp"
        app:backgroundTint="@color/colorPrimary"
        android:src="@drawable/navigation_icon_donation"
        android:layout_marginBottom="12dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comunity_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comunity_content_chip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>