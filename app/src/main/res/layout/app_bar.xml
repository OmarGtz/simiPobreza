<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="24dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/beneficiario_icon"
        android:src="@drawable/ic_account_circle_24px"
        android:layout_width="48dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        app:layout_constraintStart_toEndOf="@id/beneficiario_icon"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/beneficiario_item_tv_name"
        app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
        android:id="@+id/beneficiario_status"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="12sp"
        android:visibility="gone"
        android:drawableStart="@drawable/ic_round_assignment_ind_24px"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/darker_gray"
        tools:text="6300001391331"/>

    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/beneficiario_folio"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="12sp"
        android:visibility="visible"
        android:drawableStart="@drawable/ic_round_assignment_ind_24px"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/darker_gray"
        android:text="6300001391331"/>

    <TextView
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/beneficiario_folio"
        app:layout_constraintStart_toEndOf="@id/beneficiario_icon"
        android:id="@+id/beneficiario_item_tv_name"
        android:layout_width="wrap_content"
        android:text="Omar Gutierrez Santiago"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/beneficiario_icon"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/beneficiario_item_tv_name"
        app:layout_constraintEnd_toStartOf="@id/community_tv_entregadas"
        android:id="@+id/beneficiario_tv_folio"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="15sp"
        android:visibility="gone"
        android:drawableStart="@drawable/ic_round_assignment_ind_24px"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/darker_gray"
        tools:text="6300001391331"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/beneficiario_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/beneficiario_tv_folio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/beneficiario_type"
        android:id="@+id/beneficiario_line"
        android:visibility="visible"
        android:layout_marginEnd="41dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/beneficiario_tipo_background_circle"/>

    <TextView
        android:id="@+id/beneficiario_type"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="24dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:background="@drawable/beneficiario_tipo_background"
        android:textColor="#04bcea"
        android:text="A"/>
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
